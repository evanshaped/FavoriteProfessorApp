<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FavoriteProfessorApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FavoriteProfessorApp" parent="Base.Theme.FavoriteProfessorApp" />

    <style name="ButtonStyleLight" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DividerStyleLight" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:divider">@color/blue</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="ProfessorTitleLight" parent="Base.Theme.FavoriteProfessorApp" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ProfessorTitleDark" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="RatingBarLight" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:progressTint">@color/lightGreen</item>
        <item name="android:rating">2.5</item>
        <item name="android:scaleX">1.27</item>
        <item name="android:scaleY">1.27</item>
    </style>

    <style name="SearchBarLight" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchBarDark" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextLight" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextDark" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dark" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Light" parent="Base.Theme.FavoriteProfessorApp">
        <item name="android:background">@color/white</item>
    </style>

</resources>