<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Professors"
        style="@style/ProfessorTitleLight"
        android:id="@+id/professor_search"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue"
        android:layout_below="@+id/professor_search"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professor_list"
        style="@style/DividerStyleLight"
        android:layout_below="@+id/professor_search"
        android:layout_marginBottom="70dp"/>
    <include layout="@layout/activity_nav_bar"/>
</RelativeLayout>